<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd 
    http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- load default styles and controls -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- useStyles filename="console/custom-console-style.xml"/ -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
   
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="org.duo.magicallyous.utils.PlayerNiftyController">
        <layer id="gameLayer" childLayout="vertical">
            <panel id="emptyPanel" padding="18px,28px,28px,16px" childLayout="vertical" width="80%" 
                   height="70%" align="center" valign="center">
            </panel>            
            <panel id="gamePanel" padding="18px,28px,28px,16px" childLayout="vertical" 
                   width="80%" align="center" valign="bottom">
                <panel id = "zoomPanel" childLayout="horizontal" align="left" valign="center">
                    <control name="button" label="[" id="zoomInButton" align="left" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="zoomIn()"/>
                    </control>
                    <control name="button" label="]" id="zoomOutButton" align="right" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="zoomOut()"/>
                    </control>
                </panel>
                <panel id="commandPanel1" childLayout="horizontal" align="center" valign="bottom">
                    <control name="button" label="((" id="camLeftButton" align="left" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="camLeft()"/>
                    </control>
                    <control name="button" label="L" id="charLeftButton" align="left" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="charLeft()" onRelease="charStop()"/>
                    </control>
                    <control name="button" label="^" id="charFowardButton" align="center" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="charFoward()"/>
                    </control>
                    <control name="button" label="R" id="charRightButton" align="right" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="charRight()" onRelease="charStop()"/>
                    </control>
                    <control name="button" label="))" id="camRightButton" align="right" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="camRight()"/>
                    </control>
                </panel>
                <panel id="commandPanel2" childLayout="horizontal" align="center" valign="bottom">
                    <control name="button" label="V" id="charBackButton" align="center" valign="center"
                             visibleToMouse="true" >
                        <interact onClick="charBack()" onRelease="charStop()"/>
                    </control>
                    <control name="button" label="Cast" id="charCast" align="center" valign="center"
                             visibleToMouse="true" >
                        <interact onRelease="charCast()"/>
                    </control>
                    <control name="button" label="Run" id="charRun" align="center" valign="center"
                             visibleToMouse="true" >
                        <interact onRelease="charRun()"/>
                    </control>
                    <control name="button" label="Die" id="charDie" align="center" valign="center"
                             visibleToMouse="true" >
                        <interact onRelease="charDie()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
