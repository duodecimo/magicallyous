<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->

    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />


    <screen id="start" controller="org.duo.magicallyous.Main">
        <layer id="background" backgroundcolor="#0000f" childLayout="center">
            <image  filename="Interface/nifty/start-background.png"/>
        </layer>
        <layer id="foreground" childLayout="vertical" controller="org.duo.magicallyous.LoginAppState">
            <panel id="topPanel" height="10%" width="100%" align="center" valign="center" 
                    childLayout="center" visibleToMouse="true">
                <interact onClick="quit()"/>
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="250" 
                                   startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="250" 
                                 startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" 
                             endColor="#fffff" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/LiberationSans.fnt" color="#ffffff" 
                      text="Magicallyous - The game!" 
                      align="center" valign="center" />
            </panel>
            <panel id="middlePanel" height="60%" width="100%" align="center" valign="center" 
                    childLayout="horizontal" visibleToMouse="true">
                <panel id="middleLeftPanel" height="60%" width="30%" align="left" valign="center"
                    childLayout="vertical">
                    <text id="lbEmail" text="Email" font="Interface/Fonts/LiberationSans.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbPassword" text="Password" font="Interface/Fonts/LiberationSans.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                </panel>
                <panel id="middleCenterPanel" height="60%" width="2%"/>
                <panel id="middleRightPanel" height="60%" width="50%" align="right" valign="center"
                    childLayout="vertical">
                    <control id="tfEmail" name="textfield" width="50%" text="teste" 
                             font="Interface/Fonts/LiberationSans.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfPassword" name="textfield" width="50%" text="teste2" 
                             font="Interface/Fonts/LiberationSans.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                </panel>
            </panel>
            <panel id="bottomPanel" height="20%" width="100%" align="center" valign="center" 
                    childLayout="vertical" visibleToMouse="true">
                    <control id="loginButton" name="button" label="Login" 
                             align="center" valign="top"
                             font="Interface/Fonts/LiberationSans.fnt" 
                             color="#ffffff">
                        <interact onClick="login()"/>
                    </control>
                    <control id="exitButton" name="button" label="Exit" 
                             align="center" valign="bottom"
                             font="Interface/Fonts/LiberationSans.fnt" 
                             color="#ffffff">
                        <interact onClick="exit()"/>
                    </control>
            </panel>
        </layer>
    </screen>
</nifty>
