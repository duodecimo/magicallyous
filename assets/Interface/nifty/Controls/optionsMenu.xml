<nifty-controls>
    <controlDefinition name="options">
        <panel id="optionsPanel" childLayout="vertical" width="30%" 
               height="60%" align="left" valign="center" 
               backgroundColor="#333f">
            <panel childLayout="horizontal" width="30%" height="30px" 
                   align="center">
                <control name="label" id="title" align="center" 
                         text="Options" width="*"/>
\               <control name="button" id="closeButton" align="right" 
                         label="x" height="30px" width="30px" >
                    <interact onClick="toggleOptionsMenu()"/>
                </control>
            </panel>
            <control name="button" id="quitButton" align="center" 
                     label="Quit" height="30px" width="150px">
                <interact onClick="quit()"/>
            </control>
            <panel height="2px"/>
        </panel>
    </controlDefinition>
    <controlDefinition name="login">
        <panel id="loginTopPanel" height="60%" width="30%" align="center" valign="center" 
                   childLayout="horizontal">
            <panel id="loginTopLeftPanel" height="60%" width="15%" align="left" valign="center"
                       childLayout="vertical">
                <text id="lbEmail" text="Email" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                          color="#ffffff" align="right" valign="center"/>
                <text id="lbPassword" text="Password" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                          color="#ffffff" align="right" valign="center"/>
            </panel>
            <panel id="loginTopCenterPanel" height="60%" width="2%"/>
            <panel id="loginTopRightPanel" height="60%" width="15%" align="right" valign="center"
                       childLayout="vertical">
                <control id="tfEmail" name="textfield" width="15%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                <control id="tfPassword" name="textfield" passwordChar="*" 
                             width="15%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                <control id="lbCheck" name ="label" text="Checking!"
                             color="#ff0000" width="15%" align="left" valign="center"/>
            </panel>
        </panel>
        <panel id="loginBottomPanel" height="20%" width="30%" align="center" valign="center" 
                   childLayout="vertical">
            <control id="loginButton" name="button" label="Login" 
                             align="center" valign="top"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                <interact onRelease="login()"/>
            </control>
            <control id="RegisterButton" name="button" label="Register new user" 
                             align="center" valign="bottom"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                <interact onRelease="register()"/>
            </control>
        </panel>
    </controlDefinition>
</nifty-controls>