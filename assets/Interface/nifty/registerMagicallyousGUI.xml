<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->

    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />


    <screen id="start" controller="org.duo.magicallyous.RegisterAppState">
        <layer id="background" backgroundcolor="#0000f" childLayout="center">
            <image  filename="Interface/nifty/start-background.png"/>
        </layer>
        <layer id="foreground" childLayout="vertical" controller="org.duo.magicallyous.RegisterAppState">
            <panel id="topPanel" height="10%" width="100%" align="center" valign="center" 
                    childLayout="center" visibleToMouse="true">
                <interact onClick="quit()"/>
                <text id="text01" font="Interface/Fonts/Liberation25Serif.fnt" color="#ffffff" 
                      text="Magicallyous - The game!" 
                      align="center" valign="center" />
                <text id="text02" font="Interface/Fonts/LiberationSerif18Bold.fnt" color="#ffffff" 
                      text="User Register" 
                      align="center" valign="center" />
            </panel>
            <panel id="middlePanel" height="60%" width="100%" align="center" valign="center" 
                    childLayout="horizontal" visibleToMouse="true">
                <panel id="middleLeftPanel" height="60%" width="30%" align="left" valign="center"
                    childLayout="vertical">
                    <text id="lbName" text="Name" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbEmail" text="Email" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbPassword" text="Password" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbPassword2" text="Password again" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                </panel>
                <panel id="middleCenterPanel" height="60%" width="2%"/>
                <panel id="middleRightPanel" height="60%" width="50%" align="right" valign="center"
                    childLayout="vertical">
                    <control id="tfName" name="textfield" width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfEmail" name="textfield" width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfPassword" name="textfield" width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfPassword2" name="textfield" width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                </panel>
            </panel>
            <panel id="bottomPanel" height="20%" width="100%" align="center" valign="center" 
                    childLayout="vertical" visibleToMouse="true">
                    <control id="registerButton" name="button" label="Register" 
                             align="center" valign="top"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                        <interact onRelease="register()"/>
                    </control>
                    <control id="ReturnButton" name="button" label="Return" 
                             align="center" valign="bottom"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                        <interact onRelease="back()"/>
                    </control>
            </panel>
        </layer>
    </screen>
</nifty>
