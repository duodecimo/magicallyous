<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->

    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>


    <screen id="start">
        <layer id="background" backgroundcolor="#0000f" childLayout="center">
            <image  filename="Interface/nifty/start-background.png"/>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="topPanel" height="10%" width="100%" align="center" valign="center" 
                    childLayout="vertical">
                <text id="text00" font="Interface/Fonts/Liberation25Serif.fnt" color="#ffffff" 
                      text="" 
                      align="center" valign="center" />
                <text id="text01" font="Interface/Fonts/Liberation25Serif.fnt" color="#ffffff" 
                      text="Magicallyous - The game!" 
                      align="center" valign="center" />
            </panel>
            <popup id="loginPopup" height="80%" width="100%" align="center" valign="center" 
                    childLayout="horizontal" visibleToMouse="true"  
                   controller="org.duo.magicallyous.LoginAppState">
                <text id="text02" font="Interface/Fonts/Liberation25Serif.fnt" color="#ffffff" 
                      text="User login" 
                      align="center" valign="center" />
                <panel id="middleLeftPanel" height="60%" width="30%" align="left" valign="center"
                    childLayout="vertical">
                    <text id="lbEmail" text="Email" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbPassword" text="Password" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                </panel>
                <panel id="middleCenterPanel" height="60%" width="2%"/>
                <panel id="middleRightPanel" height="60%" width="50%" align="right" valign="center"
                    childLayout="vertical">
                    <control id="tfEmail" name="textfield" width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfPassword" name="textfield" passwordChar="*" 
                             width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="lbCheck" name ="label" text="Checking!"
                            color="#ff0000" width="70%" align="left" valign="center"/>
                </panel>
                <panel id="bottomPanel" height="20%" width="100%" align="center" valign="center" 
                   childLayout="vertical" visibleToMouse="true">
                    <control id="loginButton" name="button" label="Login" 
                             align="center" valign="top"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                        <interact onRelease="login()"/>
                    </control>
                    <control id="RegisterButton" name="button" label="Register new user" 
                             align="center" valign="bottom"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                        <interact onRelease="register()"/>
                    </control>
                </panel>
            </popup>
            <popup id="registerPopup" height="80%" width="100%" align="center" valign="center" 
                    childLayout="horizontal" visibleToMouse="true" 
                    controller="org.duo.magicallyous.RegisterAppState">
                <text id="text02" font="Interface/Fonts/Liberation25Serif.fnt" color="#ffffff" 
                      text="User login" 
                      align="center" valign="center" />
                <panel id="middleLeftPanel" height="60%" width="30%" align="left" valign="center"
                    childLayout="vertical">
                    <text id="lbName" text="Name" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbEmail" text="Email" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbPassword" text="Password" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                    <text id="lbPassword2" text="Password again" font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                           color="#ffffff" align="right" valign="center"/>
                </panel>
                <panel id="middleCenterPanel" height="60%" width="2%"/>
                <panel id="middleRightPanel" height="60%" width="50%" align="right" valign="center"
                    childLayout="vertical">
                    <control id="tfName" name="textfield" width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfEmail" name="textfield" width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfPassword" name="textfield" passwordChar="*" 
                             width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="tfPassword2" name="textfield" passwordChar="*" 
                             width="50%" text="" 
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff" align="left" valign="center"/>
                    <control id="lbCheck" name ="label" text="Checking!"
                            color="#ff0000" width="50%" align="left" valign="center"/>
                </panel>
                <panel id="bottomPanel" height="20%" width="100%" align="center" valign="center" 
                   childLayout="vertical" visibleToMouse="true">
                    <control id="loginButton" name="button" label="Login" 
                             align="center" valign="top"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                        <interact onRelease="login()"/>
                    </control>
                    <control id="RegisterButton" name="button" label="Register new user" 
                             align="center" valign="bottom"
                             font="Interface/Fonts/LiberationSerif18Bold.fnt" 
                             color="#ffffff">
                        <interact onRelease="register()"/>
                    </control>
                </panel>
            </popup>
        </layer>
    </screen>
</nifty>
